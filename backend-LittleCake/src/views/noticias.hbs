<div class="row">
  {{#each noticias}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{{ titulo }}} <a href="/editar/{{{_id}}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{{ descripcion }}} </p>
        <form action="/eliminar/{{{_id}}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola {{user.name}}</h1>
      <p clsss="lead">No hay noticias aun</p>
      <a href="/anadir" class="btn btn-success btn-block">Crea una</a>
    </div>
  </div>
  {{/each}}
</div>