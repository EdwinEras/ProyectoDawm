<div class="row">
  {{#each productos}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/editarProducto/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }} </p>
        <p>{{ cantidad }} </p>
        <p>{{ precio }} </p>
        <form action="/eliminarProducto/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola {{user.name}}</h1>
      <p class="lead">No hay productos</p>
      <a href="/anadirProducto" class="btn btn-success btn-block">Crea uno</a>
    </div>
  </div>
  {{/each}}
</div>